<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="555.0" prefWidth="300.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.ChooseLangController">
   <children>
      <Label text="Language">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="30.0">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
               <children>
                  <ImageView fitHeight="100.0" fitWidth="353.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/german.png" />
                     </image>
                  </ImageView>
                  <Button fx:id="selectGerman" maxHeight="40.0" maxWidth="350.0" minHeight="40.0" minWidth="350.0" mnemonicParsing="false" onAction="#chooseGerman" prefHeight="40.0" prefWidth="350.0" text="German" />
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
               <children>
                  <ImageView fitHeight="100.0" fitWidth="353.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/spain.png" />
                     </image>
                  </ImageView>
                  <Button maxHeight="40.0" maxWidth="350.0" minHeight="40.0" minWidth="350.0" mnemonicParsing="false" onAction="#chooseSpanish" prefHeight="40.0" prefWidth="350.0" text="Spanish" />
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
               <children>
                  <ImageView fitHeight="100.0" fitWidth="353.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/france.png" />
                     </image>
                  </ImageView>
                  <Button maxHeight="40.0" maxWidth="350.0" minHeight="40.0" minWidth="350.0" mnemonicParsing="false" onAction="#chooseFrench" prefHeight="40.0" prefWidth="350.0" text="French" />
               </children>
            </VBox>
            <Label fx:id="lbl_error" maxWidth="350.0" minWidth="350.0" prefHeight="16.0" prefWidth="350.0" textFill="RED">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <stylesheets>
      <URL value="@styles.css" />
   </stylesheets>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" onMousePressed="#clearTextField" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.FillBlankController">
   <children>
      <Label fx:id="lbl_title" layoutX="24.0" layoutY="24.0" text="Welcome" />
      <Label fx:id="lbl_type" layoutX="24.0" layoutY="24.0" text="Fill in Blank" />
      <Label fx:id="lbl_question" layoutX="24.0" layoutY="24.0" text="" />
      <TextArea fx:id="txt_answer" onKeyPressed="#clearTextField" prefHeight="20.0" prefWidth="200.0" scaleY="1" text="Enter answer here" />
      <Button fx:id="btn_submitAnswers" onAction="#submitAnswers" text="Submit" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <stylesheets>
      <URL value="@styles.css" />
   </stylesheets>
</VBox>

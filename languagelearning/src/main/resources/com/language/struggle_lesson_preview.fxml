<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.StruggleLessonPreviewController">
   <children>
      <Label text="Lesson Preview" />
      <Label fx:id="lbl_title" layoutX="24.0" layoutY="24.0" text="Welcome to Struggle Lesson" />
      <Button fx:id="advanceLessonBtn" onAction="#advanceToLesson" text="Start Lesson" />
      <Label fx:id="lbl_error" layoutX="24.0" layoutY="24.0" />
      <TextArea fx:id="txt_difficultPhrases" editable="false" prefHeight="486.0" prefWidth="260.0" text="T" wrapText="true">
         <font>
            <Font name="System Regular" size="12.0" />
         </font>
      </TextArea>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <stylesheets>
      <URL value="@styles.css" />
   </stylesheets>
</VBox>

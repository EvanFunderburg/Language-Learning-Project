<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import java.net.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.StruggleLessonPreviewController">
   <children>
      <Label text="Lesson Preview" />
      <Label fx:id="lbl_title" layoutX="24.0" layoutY="24.0" text="Welcome to Struggle Lesson"/>
      <Button fx:id="advanceLessonBtn" text="Start Lesson" onAction="#advanceToLesson"/>
      <Label fx:id="lbl_error" layoutX="24.0" layoutY="24.0"/>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <stylesheets>
      <URL value="@styles.css" />
   </stylesheets>
</VBox>

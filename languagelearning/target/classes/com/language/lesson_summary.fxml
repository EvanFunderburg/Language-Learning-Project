<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import java.net.*?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.text.Font?>


<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.LessonSummaryController">
   <children>
      <Label text="Lesson summary" />
      <Label fx:id="lbl_score" layoutX="24.0" layoutY="24.0" text="Score: "/>
      <Label fx:id="lbl_feedback" layoutX="24.0" layoutY="24.0"/>
      <Label layoutX="24.0" layoutY="24.0" text="Current Struggle Words"/>
      <TextArea fx:id="txt_difficultPhrases" editable="false" prefHeight="486.0" prefWidth="260.0" text="T" wrapText="true">
         <font>
            <Font name="System Regular" size="12.0" />
         </font>
      </TextArea>
      <Button fx:id="btn_exitToProfile" text="Exit to Profile" onAction="#exitToProfile"/>
      <Button fx:id="btn_exitToLearn" text="Exit to Learn" onAction="#exitToLearn"/>
      
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <stylesheets>
      <URL value="@styles.css" />
   </stylesheets>
</VBox>

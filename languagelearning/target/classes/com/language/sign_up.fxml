<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.SignUpController">
   <children>
      <VBox alignment="TOP_CENTER" maxHeight="550.0" minHeight="550.0" prefHeight="550.0" prefWidth="100.0" spacing="10.0">
         <children>
            <Label text="Sign Up Page">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="First Name" />
                        <TextArea fx:id="txt_firstname" maxHeight="40.0" minHeight="40.0" prefHeight="40.0" prefWidth="200.0" promptText="First Name" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Last Name" />
                        <TextArea fx:id="txt_lastname" maxHeight="40.0" minHeight="40.0" prefHeight="40.0" prefWidth="200.0" promptText="Last Name" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Username" />
                        <TextArea fx:id="txt_username" maxHeight="40.0" minHeight="40.0" prefHeight="40.0" prefWidth="200.0" promptText="Username" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Password" />
                        <TextArea fx:id="txt_password" maxHeight="40.0" minHeight="40.0" prefHeight="40.0" prefWidth="200.0" promptText="Password" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            <ImageView fitHeight="250.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/GoongleLogo.png" />
               </image>
            </ImageView>
         </children>
      </VBox>
      <Label fx:id="lbl_error" maxWidth="350.0" minWidth="350.0" prefHeight="16.0" prefWidth="350.0" textFill="RED">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Button fx:id="signUpButton" maxWidth="350.0" minWidth="350.0" onAction="#switchToUserHomePage" prefWidth="350.0" text="Sign Up">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <stylesheets>
      <URL value="@styles.css" />
   </stylesheets>
</VBox>

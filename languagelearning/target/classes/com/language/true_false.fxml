<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.TrueFalseController">
   <children>
      <VBox alignment="TOP_CENTER" maxHeight="550.0" minHeight="550.0" prefHeight="550.0" prefWidth="100.0" spacing="20.0">
         <children>
            <Label fx:id="lbl_question" text="" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font name="System Bold" size="25.0" />
               </font>
            </Label>
            <Button fx:id="trueButton" maxHeight="125.0" maxWidth="350.0" minHeight="125.0" minWidth="350.0" onAction="#clickedTrueButton" prefHeight="125.0" prefWidth="350.0" style="-fx-background-color: green;" text="TRUE">
               <font>
                  <Font name="System Bold" size="45.0" />
               </font>
            </Button>
            <Button fx:id="falseButton" maxHeight="125.0" maxWidth="350.0" minHeight="125.0" minWidth="350.0" onAction="#clickedFalseButton" prefHeight="125.0" prefWidth="350.0" style="-fx-background-color: red;" text="FALSE">
               <font>
                  <Font name="System Bold" size="45.0" />
               </font>
            </Button>
         </children>
      </VBox>
      <Button fx:id="returnHomeButton" maxWidth="350.0" minWidth="350.0" onAction="#switchToUserHomePage" prefWidth="350.0" text="Exit">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></Button>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <stylesheets>
      <URL value="@styles.css" />
   </stylesheets>
</VBox>
